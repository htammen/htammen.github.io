<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form"
		  xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m">

	<VBox>
		<Title titleStyle="H4" class="sapUiMediumMarginTop sapUiSmallMarginBottom" text="{i18n>view.profile.block.addresses.header}"></Title>
		<Label text="{i18n>view.profile.block.addresses.work}"/>
		<VBox>
			<Text text="{profile>Addresses/WorkAddress/Street} {Addresses/WorkAddress/Housenum}"/>
			<Text text="{profile>Addresses/WorkAddress/Zipcode} {Addresses/WorkAddress/City}"/>
			<Text text="{profile>Addresses/WorkAddress/Country}"/>
		</VBox>
		<Label class="sapUiSmallMarginTop" text="{i18n>view.profile.block.addresses.home}"/>
		<VBox>
			<Text text="{profile>Addresses/HomeAddress/Street} {Addresses/HomeAddress/Housenum}"/>
			<Text text="{profile>Addresses/HomeAddress/Zipcode} {Addresses/HomeAddress/City}"/>
			<Text text="{profile>Addresses/HomeAddress/Country}"/>
		</VBox>
	</VBox>
</mvc:View>