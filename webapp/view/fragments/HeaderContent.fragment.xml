		<f:SimpleForm
			editable="false"
			width="100%"
			layout="ResponsiveGridLayout"
			title="{headerModel>/title}"
			labelSpanXL="2"
			labelSpanL="2"
			labelSpanM="2"
			labelSpanS="4"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			backgroundDesign="Transparent"
			singleContainerFullSize="false"
			class="headerForm">
			<f:content>
				<m:Label text="Phone" class="headerLabel" />
				<m:Link text="{profile>Phone/Mobile}"/>
				<m:Label text="E-Mail" class="headerLabel" />
				<m:Link text="{profile>Email/Work}" href="{path: 'profile>Email/Work', formatter: '.formatEmailLink'}"/>
				<m:Label text="{i18n>view.profile.residence}" class="headerLabel"/>
				<m:Text text="{profile>Addresses/WorkAddress/City}, {profile>Addresses/WorkAddress/Country}"/>
				<m:Label text="{i18n>view.profile.availability}" class="headerLabel"/>
				<m:Text text="{profile>Availability}"/>
				<m:Label text="{i18n>view.profile.regions}" class="headerLabel"/>
				<m:Text text="{profile>Regions}"/>
			</f:content>
		</f:SimpleForm>
